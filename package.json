{
  "name": "playtype-api-framework",
  "version": "1.0.0",
  "description": "This repository contains an api automation framework using Playwright, Typescript",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:all": "NODE_ENV=${ENV:-stage} npx playwright test --repeat-each=${RCOUNT:-1}",
    "test:file": "NODE_ENV=${ENV:-stage} npx playwright test $FILE --repeat-each=${RCOUNT:-1}",
    "test:tag": "NODE_ENV=${ENV:-stage} npx playwright test --grep '@$TAG' --repeat-each=${RCOUNT:-1}",
    "test:env": "NODE_ENV=${ENV:-stage} npx playwright test --repeat-each=${RCOUNT:-1}"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reyadhsupto/PlayType-Api-Framework.git"
  },
  "keywords": [],
  "author": "Reyad Hassan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reyadhsupto/PlayType-Api-Framework/issues"
  },
  "homepage": "https://github.com/reyadhsupto/PlayType-Api-Framework#readme",
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.1",
    "@types/express": "^5.0.5",
    "@types/k6": "^1.3.0",
    "@types/node": "^25.2.3",
    "@types/pg": "^8.15.5",
    "@types/ssh2": "^1.15.5",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "^3.4.1",
    "consul": "^2.0.1",
    "express": "^5.1.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "playwright": "^1.55.1",
    "prom-client": "^15.1.3",
    "ssh2": "^1.17.0",
    "ssh2-promise": "^1.0.3",
    "ts-node": "^10.9.2",
    "tsx": "^3.12.7",
    "tunnel-ssh": "^5.2.0",
    "typescript": "^5.9.3",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "dotenv": "^17.2.2",
    "mysql2": "^3.17.1",
    "winston": "^3.17.0"
  }
}
